<?php 
$_SERVER['HTTP_HOST'] = '<%= node[:wordpress][:multisite][:domain_current_site] %>';
$_SERVER['REQUEST_METHOD'] = 'GET';

if ( !isset($wp_did_header) ) {

    $wp_did_header = true;

    require_once( dirname(__FILE__) . '/wordpress/wp-load.php' );
}

$rows = $wpdb->get_results( "SELECT * FROM {$wpdb->dmtable} ORDER BY id DESC" );

foreach ($rows as $row) {
    $domain = $row->domain;
    if (substr($domain, 0, 4) == 'www.') {
      $domain = substr($domain, 4);
    }
    echo "{$domain}\n";
}

die();
